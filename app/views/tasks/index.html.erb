<div class="container">
  <h1>My tasks</h1>

  <ul>
    <% @tasks.each do |task| %>
      <% if task.completed %>
        <li><input type="checkbox" checked><%= link_to task.title, task_path(task) %> <%= link_to "Delete",
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
      %></li>
      <% else %>
        <li><input type="checkbox"><%= link_to task.title, task_path(task)%> <%= link_to "Delete",
        task_path(task),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"},
      %></li>
      <% end %>

    <% end %>
  </ul>
  <%= link_to "add new task", tasks_new_path, class: "btn btn-primary" %>
</div>
